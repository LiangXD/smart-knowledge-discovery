<beans xmlns="http://www.springframework.org/schema/beans"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:context="http://www.springframework.org/schema/context"
          xsi:schemaLocation="
   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config/>
  <context:component-scan base-package="com.plugtree.smartknowledgediscovery"/>
 
 <bean id="interviewService" class="com.plugtree.smartprocessdiscovery.dao.impl.InterviewDaoJpa" />
 <bean id="questionService" class="com.plugtree.smartprocessdiscovery.dao.impl.QuestionDaoJpa" />
 <bean id="categoryService" class="com.plugtree.smartprocessdiscovery.dao.impl.CategoryDaoJpa" />
 
  <bean id="interviewResource" class="com.plugtree.smartknowledgediscovery.InterviewResource" >
    <property name="interviewService" ref="interviewService" />
  </bean>

  <bean id="questionResource" class="com.plugtree.smartknowledgediscovery.QuestionsResource" >
    <property name="questionService" ref="questionService" />
  </bean>
  
  <bean id="categoryResource" class="com.plugtree.smartknowledgediscovery.CategoryResource" >
    <property name="categoryService" ref="categoryService" />
  </bean>
  
</beans>
