<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->
  <servlet>
    <servlet-name>questionServlet</servlet-name>
    <servlet-class>com.plugtree.smartknowledgediscovery.server.QuestionServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>categoryServlet</servlet-name>
    <servlet-class>com.plugtree.smartknowledgediscovery.server.CategoryServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>questionnaireServlet</servlet-name>
    <servlet-class>com.plugtree.smartknowledgediscovery.server.QuestionnaireServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>questionServlet</servlet-name>
    <url-pattern>/SmartKnowledgeDiscovery/question</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>categoryServlet</servlet-name>
    <url-pattern>/SmartKnowledgeDiscovery/category</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>questionnaireServlet</servlet-name>
    <url-pattern>/SmartKnowledgeDiscovery/questionnaire</url-pattern>
  </servlet-mapping>



  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SmartKnowledgeDiscovery.html</welcome-file>
  </welcome-file-list>

</web-app>
